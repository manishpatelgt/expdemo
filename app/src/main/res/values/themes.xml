<resources>

    <style name="PostTitleText">
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PostAuthorText">
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
    </style>

    <style name="PostImage">
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_15dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>