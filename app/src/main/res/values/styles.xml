<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GenericButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="android:layout_margin">@dimen/dimen_10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_80dp</item>
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="android:layout_margin">@dimen/dimen_10dp</item>
    </style>

</resources>
