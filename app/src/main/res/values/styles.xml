<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PostsRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
    </style>

    <style name="PostAuthorText">
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
    </style>


    <style name="PostTitleText">
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>